<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2">Lista de docentes</h3>
        {{#if personas}}
            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4">Nombre</th>
                        <th scope="col">RFC</th>
                        <th scope="col">AÃ±os de experiencia</th>
                        <th scape="col">Materia</th>
                        <th scape="col">Hora de entrada</th>
                        <th scope="col">Acciones</th>
                        
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                        <tr>
                            <td>{{name}}</td>
                            <td>{{rfc}}</td>
                            <td>{{years}}</td>
                            <td>{{mat}}</td>
                            <td>{{hour}}</td>
                            <td>
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                    <i class="fa-solid fa-pencil"></i></a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                    <i class="fa-solid fa-trash"></i></a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>
                <tfoot>
                    <tr class="table-dark">
                        <td colspan="6">REGISTRO DE DOCENTES</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        {{else}}
            <div class="card text-center mx-auto" style="width: 350px;">
                <div class="card-header">
                    <h3>Debes registrarte para continuar</h3>
                </div>
                <div class="card-body">
                    <p>Presiona el boton para que puedas registrarte</p>
                    <a href="add" class="btn btn-primary">Ir a crear</a>
                </div>
        {{/if}}
    </div>
</div>