<div class="conatiner p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITANDO UNA PERSONA</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{persona.id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="name" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="name" id="name" value="{{persona.name}}" placeholder="Ejemplo: Luis Angel" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="rfc" class="input-group-text">RFC</label>
                        <input class="form-control" type="text" name="rfc" id="rfc" placeholder="Ejemplo: QUMA470929F37" value="{{persona.rfc}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="years" class="input-group-text">AÃ±os de experiencia</label>
                        <input class="form-control" type="number" name="years" id="years" value="{{persona.years}}" placeholder="0" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="mat" class="input-group-text">Materia</label>
                        <input class="form-control" type="text" name="mat" id="mat" placeholder="Ejemplo: Historia" value="{{persona.mat}}" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="hour" class="input-group-text">Hora de entrada</label>
                        <input class="form-control" type="time" name="hour" id="hour" placeholder="Ejemplo: Historia" value="{{persona.hour}}" required>
                    </div>
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>